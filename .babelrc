{
  "presets": [
    "@babel/preset-react",
    ["@babel/preset-env",
      {
        "useBuiltIns": "usage",
        "corejs": 2
      }
    ]
  ],
  "plugins": [
    "@babel/plugin-proposal-class-properties",
    "@babel/plugin-syntax-class-properties",
    "@babel/plugin-syntax-dynamic-import"
  ],
  "env": {
    "production": {
      "plugins": [
        [
          "transform-react-remove-prop-types",
          {"mode": "remove", "removeImport": true}
        ]
      ]
    },
    "test": {
      // to handle import() syntax in tests
      // "plugins": [
      //   "module:@exc/babel-dynamic-import-noop"
      // ]
    }
  }
}
